                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_duration5"
                        style="@style/choiceness_video_collection_item_text__category_style"
                        android:layout_alignBaseline="@id/choiceness_video_collection_of_author_item_type5"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_toEndOf="@id/choiceness_video_collection_of_author_item_sperate5" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>