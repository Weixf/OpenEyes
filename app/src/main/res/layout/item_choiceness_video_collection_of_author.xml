                        android:text="/" />


                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_duration4"
                        style="@style/choiceness_video_collection_item_text__category_style"
                        android:layout_alignBaseline="@id/choiceness_video_collection_of_author_item_type4"
                        android:layout_toEndOf="@id/choiceness_video_collection_of_author_item_sperate4" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_550"
                android:layout_height="@dimen/dimen_400"
                android:layout_marginStart="@dimen/dimen_10"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/choiceness_video_collection_of_author_item_image5"
                    style="@style/choiceness_video_collection_item_image_style" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_title5"
                        style="@style/choiceness_video_collection_item_text_style" />

                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_type5"
                        style="@style/choiceness_video_collection_item_text__category_style"
