                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_duration2"
                        style="@style/choiceness_video_collection_item_text__category_style"
                        android:layout_alignBaseline="@id/choiceness_video_collection_of_author_item_type2"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_toEndOf="@id/choiceness_video_collection_of_author_item_sperate2" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_550"
                android:layout_height="@dimen/dimen_400"
                android:layout_marginStart="@dimen/dimen_10"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/choiceness_video_collection_of_author_item_image3"
                    style="@style/choiceness_video_collection_item_image_style" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_title3"
                        style="@style/choiceness_video_collection_item_text_style" />

                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_type3"
                        style="@style/choiceness_video_collection_item_text__category_style"
                        android:layout_below="@id/choiceness_video_collection_of_author_item_title3"
                        android:layout_marginStart="@dimen/dimen_30" />

                    <TextView
                        android:id="@+id/choiceness_video_collection_of_author_item_sperate3"
                        style="@style/choiceness_video_collection_item_text__category_style"
                        android:layout_alignBaseline="@id/choiceness_video_collection_of_author_item_type3"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_toEndOf="@id/choiceness_video_collection_of_author_item_type3"
                        android:text="/" />


                    <TextView
