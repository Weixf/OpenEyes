                        android:layout_alignBaseline="@id/choiceness_video_collection_of_author_item_type3"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_toEndOf="@id/choiceness_video_collection_of_author_item_sperate3" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_550"
                android:layout_height="@dimen/dimen_400"
                android:layout_marginStart="@dimen/dimen_10"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/choiceness_video_collection_of_author_item_image4"
                    style="@style/choiceness_video_collection_item_image_style" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
